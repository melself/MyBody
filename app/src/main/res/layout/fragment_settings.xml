<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment"
    android:background="@color/dark">

    <ImageButton
        android:id="@+id/backToProf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/custom_back_button"
        android:src="@drawable/ic_back_vector"
        android:layout_gravity="start|top"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfSet"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profileava"
        app:shapeAppearanceOverlay="@style/imageProf" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="150dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_edcam" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_gravity="top|center"
        android:layout_marginTop="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="270dp"
        android:layout_marginStart="40dp"
        android:textColor="#C464E5"
        android:fontFamily="@font/opensans_regular"
        android:text="Имя" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="@font/opensans_regular"
        android:text="Евгений"
        android:textSize="16sp"
        android:layout_gravity="top|start"
        android:layout_marginTop="295dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/white"
        android:background="@null" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_gravity="top|center"
        android:layout_marginTop="330dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="350dp"
        android:layout_marginStart="40dp"
        android:textColor="#C464E5"
        android:fontFamily="@font/opensans_regular"
        android:text="Пароль" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:fontFamily="@font/opensans_regular"
        android:text="Евгений"
        android:textSize="16sp"
        android:layout_gravity="top|start"
        android:layout_marginTop="375dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/white"
        android:background="@null" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_gravity="top|center"
        android:layout_marginTop="410dp"/>

    <Button
        android:id="@+id/updateProf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:text="Обновить"
        android:textSize="18sp"
        android:fontFamily="@font/opensans_regular"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_perpl"/>

</FrameLayout>